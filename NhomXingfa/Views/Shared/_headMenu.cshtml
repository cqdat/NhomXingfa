@using NhomXingfa.Areas.Quantri.Models.DataModels
@using NhomXingfa.Areas.Quantri.Models
@using NhomXingfa.Models
@model MenuViewModel

<header class="header_area">
    <div class="top_menu">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="float-left">
                        <p>@Model.Phone.InfoTitle: <strong> @Model.Phone.InfoContent</strong></p>
                        <p>@Model.Email.InfoTitle: <strong>@Model.Email.InfoContent</strong></p>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="float-right">
                        <ul class="right_side">
                           
                            <li>
                                <a href="https://goo.gl/maps/16jZUrMrV1PMihS17" target="_blank">
                                    Sơ đồ đường đi
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="main_menu">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light w-100">
                <!-- Brand and toggle get grouped for better mobile display -->
                <a class="navbar-brand logo_h" href="/">
                    <img src="~/img/logo.png" style="height:40px" alt="Logo Nhôm Xingfa Bình Dương" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse offset w-100" id="navbarSupportedContent">
                    <div class="row w-100 mr-0">
                        <div class="col-lg-10 pr-0">
                            <ul class="nav navbar-nav center_nav pull-right">
                                <li class="nav-item active" id="menuhome">
                                    <a class="nav-link" href="/">Home</a>
                                </li>
                                <li class="nav-item" id="menugt">
                                    <a class="nav-link" href="/bai-viet/@ViewBag.URLGioiThieu">Giới thiệu</a>
                                </li>
                                <li class="nav-item submenu dropdown" id="menusp">
                                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                                       aria-expanded="false">Sản phẩm</a>
                                    <ul class="dropdown-menu">
                                        @foreach (var i in Model.lstProductCategory)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link" href="/san-pham/@i.SEOUrlRewrite-@i.CategoryID">@i.CategoryName</a>
                                            </li>
                                        }


                                    </ul>
                                </li>
                                <li class="nav-item" id="menuda">
                                    <a class="nav-link" href="/du-an">Dự án</a>
                                </li>
                                <li class="nav-item submenu dropdown" id="menutt">
                                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                                       aria-expanded="false">Tin tức</a>
                                    <ul class="dropdown-menu">
                                        @foreach (var j in Model.lstNewsCategory)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link" href="/tin-tuc/@j.SEOUrlRewrite-@j.CategoryID">@j.CategoryName</a>
                                            </li>
                                        }

                                       
                                    </ul>
                                </li>
                                <li class="nav-item" id="menulh">
                                    <a class="nav-link" href="/lien-he">Liên hệ</a>
                                </li>
                            </ul>
                        </div>

                        <div class="col-lg-2 pr-0">
                            <ul class="nav navbar-nav navbar-right right_nav pull-right">
                                <li class="nav-item">
                                    <a href="#" class="icons">
                                        <i class="ti-search" aria-hidden="true"></i>
                                    </a>
                                </li>


                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</header>
