@using NhomXingfa.Areas.Quantri.Utilities
@using NhomXingfa.Areas.Quantri.Models.DataModels
@model IEnumerable<ProductGroup>
    <section class="feature_product_area section_gap_bottom_custom">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="main_title">
                        <h2><span>Sản phẩm nổi bật</span></h2>
                        <p>Bring called seed first of third give itself now ment</p>
                    </div>
                </div>
            </div>

            <div class="row">
                @foreach (var i in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="single-product">
                            <div class="product-img">
                                <img class="img-fluid w-100" style="height:191px" src="@WebConstants.ImgProductShow/@i.Product.Images" alt="" />
                                <div class="p_icon">
                                    <a href="#">
                                        <i class="ti-eye"></i>
                                    </a>
                                   
                                   
                                </div>
                            </div>
                            <div class="product-btm">
                                <a href="#" class="d-block">
                                    <h4>@i.Product.ProductName</h4>
                                </a>
                                <div class="mt-3">
                                    <span class="mr-4">@i.Product.Price</span>
                                    @*<del>$35.00</del>*@
                                </div>
                            </div>
                        </div>
                    </div>
                }


                
            </div>
        </div>
    </section>
