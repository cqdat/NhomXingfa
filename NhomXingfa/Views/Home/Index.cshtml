@using NhomXingfa.Models
@using NhomXingfa.Areas.Quantri.Utilities
@model IndexViewModels
@{
    var first = new NhomXingfa.Areas.Quantri.Models.DataModels.ProductGroup();

    ViewBag.Title = "Nhôm kính Bình Dương, Nhôm kính giá rẻ Bình Dương ";


    if (Model.listSPMoi.Count > 0)
    {
        first = Model.listSPMoi.First();
    }
    else
    {
        first = null;
    }
    int count = 0;
}
@section metatags
{
    <meta name="keywords" content="nhôm kính Bình Dương, nhôm kính giá rẻ Bình Dương , nội thất chung cư bình dương, nội thất bình dương, thi công nội thất bình dương" />
    <meta name="description" content="Dịch vụ thi công nhôm kính Tân thời chúng tôi cung cấp các sản phẩm nhôm kính Xingfa giá rẻ nhưng chất lượng" />
}
<!--================Home Banner Area =================-->
<section class="home_banner_area mb-40">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content row">
                <div class="col-lg-12">

                    <h3><span>Nhôm kính Tân thời</span> <br /> Cửa vững Nhà An</h3>
                    <h4>Chuyên thiết kế - thi công cửa kính, cửa nhôm Xingfa</h4>
                    <a class="main_btn mt-40" href="/san-pham">Xem sản phẩm</a>
                </div>
            </div>
        </div>
    </div>

</section>
<!--================End Home Banner Area =================-->
<!-- Start feature Area -->
@Html.Partial("_baiVietServices", Model.lstServices)

<!-- End feature Area -->
<!--================ Feature Product Area =================-->
@Html.Partial("_sanPhamNoiBat", Model.lstProductNoibat)

<!--================ End Feature Product Area =================-->
<!--================ Offer Area =================-->
<section class="offer_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="offset-lg-4 col-lg-6 text-center">
                <div class="offer_content">
                    <h3 class="text-uppercase mb-40" style="color:#fff">Chất lượng uy tín - đảm bảo với Nhôm</h3>
                    <h2 class="text-uppercase" style="color:#fff">Xingfa</h2>
                    <a href="/du-an" class="main_btn mb-20 mt-5">Xem các dự án</a>

                </div>
            </div>
        </div>
    </div>
</section>
<!--================ End Offer Area =================-->
