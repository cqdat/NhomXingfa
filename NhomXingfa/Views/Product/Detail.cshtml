@model NhomXingfa.Models.DetailProductViewModel
@{
    ViewBag.Title = Model.product.ProductName;
}

<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2>Chi tiết sản phẩm</h2>
                    <p>@Model.product.ProductName</p>
                </div>
                <div class="page_link">
                    <a href="/">Trang Chủ</a>
                    <a href="/san-pham/@Model.category.SEOUrlRewrite-@Model.category.CategoryID">@Model.category.CategoryName</a>
                    <a href="javascript:">@Model.product.ProductName</a>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Partial("_detail", Model)



@section scripts
{
    <script>
        $(document).ready(function () {

            $(".pull-right li").removeClass("active");

            $(".pull-right li#menusp").addClass("active");

        });
    </script>
}